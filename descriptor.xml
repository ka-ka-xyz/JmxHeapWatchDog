<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>*.jar</include>
			</includes>
			<outputDirectory>/lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/batch</directory>
			<includes>
				<include>*.bat</include>
			</includes>
			<outputDirectory>/bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/commons-daemon/amd64</directory>
			<includes>
				<include>*.exe</include>
			</includes>
			<outputDirectory>/bin/daemon</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/commons-daemon/x86</directory>
			<includes>
				<include>*.exe</include>
			</includes>
			<outputDirectory>/bin/daemon</outputDirectory>
		</fileSet>
        <fileSet>
            <directory>${basedir}/commons-daemon</directory>
            <includes>
                <include>*.txt</include>
            </includes>
            <outputDirectory>/bin/daemon</outputDirectory>
        </fileSet>

		<fileSet>
			<directory>${basedir}/conf</directory>
			<includes>
				<include>*.*</include>
			</includes>
			<outputDirectory>/conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/commons-daemon</directory>
			<includes>
				<include>*.txt</include>
			</includes>
			<outputDirectory>/commons-daemon</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}</directory>
			<includes>
				<include>*.md</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>